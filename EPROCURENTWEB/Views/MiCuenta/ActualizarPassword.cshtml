
@model EprocurementWeb.Models.ActualizaPasswordModel
@{
    ViewBag.Title = "Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/validacionProveedor.css" rel="stylesheet" />
<div class="container">

    <div class="formPrincipal">
        <div class="col100 mt-2" style="font-size:14px;">
            <div class="row pb-0">
                <div class="col-sm-12">
                    <h3 class="subtitle">
                        Contraseña
                    </h3>
                </div>
            </div>
        </div>


        <div class="row mt-2">
            <div class="col-md-12">
                @using (Html.BeginForm("ActualizarPassword", "MiCuenta", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                <div class="accordion" id="accordionExample">
                    <div class="card card-border">
                        <div class="card-header" id="headingOne">
                            <span class="card-titulo">
                                Cambio de Contraseña
                                <button class="btn btn-link collapsed float-right" type="button" data-toggle="collapse" data-target="#especialidadEmpresa" aria-expanded="false" aria-controls="collapseThree">
                                    <i class="fas fa-chevron-up collapse-color"></i>
                                </button>
                            </span>
                        </div>
                        <div id="especialidadEmpresa" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                            <div class="card-body">

                                <div class="col100" style="font-size:14px;">

                                    @Html.ValidationSummary(true)
                                    <div class="col100 mt-2 mb-2">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Password, new { @class = "labelTexto control-label" })
                                                    @Html.PasswordFor(model => model.Password, new { placeholder = "", @class = "form-control inputIF", maxlength = "10" })
                                                    @Html.ValidationMessageFor(model => model.Password)
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.PasswordNueva, new { @class = "labelTexto control-label" })
                                                    @Html.PasswordFor(model => model.PasswordNueva, new { @class = "form-control inputIF", maxlength = "10" })
                                                    @Html.ValidationMessageFor(model => model.PasswordNueva)
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.ConfirmarPassword, new { @class = "labelTexto control-label" })
                                                    @Html.PasswordFor(model => model.ConfirmarPassword, new { @class = "form-control inputIF", maxlength = "10" })
                                                    @Html.ValidationMessageFor(model => model.ConfirmarPassword)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-sm-8">&nbsp;</div>
                        <div class="col-sm-2">
                            <a href="@Url.Action("Index", "MiCuenta")">
                                <input type="button" value="Cancelar" class="btnStyle btnWhite" />
                            </a>
                        </div>
                        <div class="col-sm-2"><input type="submit" value="Aceptar" class="btnStyle" /></div>
                    </div>
                </div>
                 }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        if (window.location.hash == "#success") {
            Swal.fire({
                position: 'middle',
                icon: 'success',
                title: '¡Actualización de Contraseña Exitosa!',
                html: '',
                showConfirmButton: true,
                timer: 3000
            })
        }
        else if (window.location.hash == "#errorSuccess") {
            Swal.fire({
                position: 'middle',
                icon: 'error',
                title: '¡Se generó un error al intentar actualizar la contraseña.!',
                html: '',
                showConfirmButton: true,
                timer: 3000
            })
        }
    });
</script>










