@model EprocurementWeb.Models.UsuarioModel
@{
    ViewBag.Title = "Bienvenido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Styles/Login.css" rel="stylesheet" />


<div class="background row" style="padding-bottom: 0px;">
    <div class="col-sm-7">
        <div class="pnl-logo">
            <img src="~/Content/Images/logo-gap-color.png" width="154" />
        </div>
        <div class="content-title">
            <h1 class="title">PORTAL<br /> DE PROVEEDORES</h1>
        </div>
    </div>
    <div class="col-sm-5 containerLogin">
        @using (Html.BeginForm("Login", "Seguridad", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row pb-0">
                <div class="col-sm-12">
                    <br /><br /><br /><br /><br /><br /><br />
                    <h3 class="subtitle">
                        Inicia sesión
                    </h3>
                </div>
            </div>

            <div class="formPrincipal">
                <div class="row login-user">
                    <div class="col-sm-2">
                        &nbsp;
                    </div>
                    <div class="col-sm-8">
                        <div class="inputIF">
                            @Html.LabelFor(model => model.NombreUsuario, new { @class = "labelTexto control-label" })
                        </div>
                        <div class="inputIF">
                            @Html.TextBoxFor(model => model.NombreUsuario, new { @class = "form-control inputIF val-rfc" })
                        </div>
                    </div>
                </div>

                <div class="row login-pass" style="display:none;">
                    <div class="col-sm-2">
                        &nbsp;
                    </div>
                    <div class="col-sm-8">
                        <div class="inputIF" style="display:none">
                            @Html.LabelFor(model => model.Password, new { @class = "labelTexto control-label" })
                        </div>
                        <div class="inputIF">
                            <label class="labelTexto control-label">Contraseña</label>
                        </div>
                        <div class="inputIF">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control inputIF txt-pass" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8" style="text-align:center">
                        <div class="mt-2">
                            @ViewBag.Error
                        </div>
                        <div class="mt-2">
                            <div class="a-options" style="text-align:center">
                                @Html.ActionLink("Olvidaste tu contraseña", "IniciarRecuperacion", "Seguridad")
                            </div>
                        </div>
                        <div class="mt-2">
                            <div class="a-options" style="text-align:center">
                               @* @Html.ActionLink("Registrate aquí", "IniciarRecuperacion", "Seguridad")*@
                                @Html.ActionLink("Registrate aquí", "Index", "Home")
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-content" style="background-color:white; padding: 15px; display:none;">
                    <div role="tabpanel" class="tab-pane fade in active show" id="IB">
                        <div class="col100 mt-2">
                            @ViewBag.Error
                        </div>
                        <div class="col100 mt-2">
                            <div class="col25" style="text-align:center">
                                @Html.ActionLink("Olvidaste tu contraseña", "IniciarRecuperacion", "Seguridad")
                            </div>
                        </div>
                        <div class="col100 mt-2">
                            <div class="col25" style="text-align:center">
                                @Html.ActionLink("Registrate aquí", "InformacionBF", "AltaProveedor")
                            </div>
                        </div>

                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-sm-2">&nbsp;</div>
                    <div class="col-sm-8">
                        <input type="button" value="Siguiente" class="btnStyle btn-radius btn-next" onClick="LoginSiguiente()" />
                        <input type="submit" value="Ingresar" class="btnStyle btn-radius btn-fin" style="display:none" />
                    </div>
                    <div class="col-sm-2">&nbsp;</div>
                </div>
            </div>

        }
    </div>
</div>


<script type="text/javascript">
    var LoginSiguiente = function () {
        var valrfc = $(".val-rfc").val();
        if (valrfc == '') {
            Swal.fire({
                position: 'middle',
                icon: 'warning',
                title: '',
                html: 'El RFC se encuentra vacío',
                showConfirmButton: true,
                timer: 3000
            });
            //alert("El RFC se encuentra vacío");
        }
        else {
            $(".btn-next").hide();
            $(".login-user").hide();

            $(".btn-fin").show();
            $(".login-pass").show();

            $(".txt-pass").focus();
        }
    }
</script>


