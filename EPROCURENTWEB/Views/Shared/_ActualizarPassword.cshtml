@model EprocurementWeb.Models.ActualizaPasswordModel
@using (Html.BeginForm("ActualizarPassword", "MiCuenta", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col100" style="font-size:14px;">

        @Html.ValidationSummary(true)
        <div class="col100 mt-2">
            <div class="col25">
                <div class="inputIF">
                    @Html.LabelFor(model => model.Password, new { @class = "labelTexto control-label" })
                </div>
                <div class="inputIF">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control inputIF" })
                </div>
            </div>
            <div class="col25">
                <div class="inputIF">
                    @Html.LabelFor(model => model.PasswordNueva, new { @class = "labelTexto control-label" })
                </div>
                <div class="inputIF">
                    @Html.PasswordFor(model => model.PasswordNueva, new { @class = "form-control inputIF" })
                </div>
            </div>
            <div class="col25">
                <div class="inputIF">
                    @Html.LabelFor(model => model.ConfirmarPassword, new { @class = "labelTexto control-label" })
                </div>
                <div class="inputIF">
                    @Html.PasswordFor(model => model.ConfirmarPassword, new { @class = "form-control inputIF" })
                </div>
            </div>
        </div>
        <div class="col100 mt-2">
            <div class="col25">
                <div class="inputIF">
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>
            <div class="col25">
                <div class="inputIF">
                    @Html.ValidationMessageFor(model => model.PasswordNueva)
                </div>
            </div>
            <div class="col25">
                <div class="inputIF">
                    @Html.ValidationMessageFor(model => model.ConfirmarPassword)
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-sm-8">&nbsp;</div>
        <div class="col-sm-2"><input type="button" value="Cancelar" class="btnStyle btnWhite" /></div>
        <div class="col-sm-2"><input type="submit" value="Aceptar" class="btnStyle" /></div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        if (window.location.hash == "#psuccess") {
            Swal.fire({
                position: 'middle',
                icon: 'success',
                title: '¡Actualización de Contraseña Exitosa!',
                html: '',
                showConfirmButton: true,
                timer: 3000
            })
        }
        });
</script>

